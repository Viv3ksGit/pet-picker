<?xml version="1.0" encoding="UTF-8"?>
<local:BaseClasses.BasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:PuppyPicker" x:Class="PuppyPicker.SettingsPage" Title="{Binding SP_Title}">
    <ContentPage.Content>
        <TableView Intent="Settings">
    <TableRoot>
        <TableSection Title="My settings">
            <ViewCell>
                <StackLayout Orientation="Horizontal" Margin="15,0,15,0">
                    <Label Text="Image size"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                    <Picker x:Name="imageSize"
                            Title="Image Size"
                            TitleColor="Red" HorizontalOptions="EndAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Small</x:String>
                                <x:String>Medium</x:String>
                                <x:String>Large</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                        <Picker.SelectedIndex>1</Picker.SelectedIndex>
                    </Picker>
                </StackLayout>
            </ViewCell>
            <ViewCell>
                <StackLayout Orientation="Horizontal" Margin="15,0,15,0">
                    <Label Text="Font size"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                    <Picker x:Name="fontSize"
                            Title="Font Size"
                            TitleColor="Red" HorizontalOptions="EndAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Small</x:String>
                                <x:String>Medium</x:String>
                                <x:String>Large</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                        <Picker.SelectedIndex>1</Picker.SelectedIndex>
                    </Picker>
                </StackLayout>
            </ViewCell>
            <ViewCell>
                <StackLayout Orientation="Horizontal" Margin="15,0,15,0">
                    <Label Text="Theme"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                    <Picker x:Name="appTheme"
                            Title="Theme"
                            TitleColor="Red" HorizontalOptions="EndAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Summer</x:String>
                                <x:String>Default</x:String>
                                <x:String>Beach</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                        <Picker.SelectedIndex>1</Picker.SelectedIndex>
                    </Picker>
                </StackLayout>
            </ViewCell>
        </TableSection>
    </TableRoot>
</TableView>
