<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PuppyPicker.MenuPage" Title="☰">
    <ContentPage.Content>
       <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height = "*"/>
                <RowDefinition Height = "*"/>
            </Grid.RowDefinitions>
            
            <StackLayout Grid.Row="0" BackgroundColor="White" VerticalOptions="Center">
                <Image Source="dog.png"/>
            </StackLayout>
            
            <Grid Grid.Row="1" VerticalOptions="FillAndExpand">
                <Button Grid.Row="0" Text="Home" Clicked="Home_Handle_Clicked"/>
                <Button Grid.Row="1" Text="Match" Clicked="Match_Handle_Clicked"/>
                <Button Grid.Row="2" Text="Favorites" Clicked="Favorites_Handle_Clicked"/>
                <Button Grid.Row="3" Text="Previous Matches" Clicked="PM_Handle_Clicked"/>
                <Button Grid.Row="4" Text="Settings" Clicked="Settings_Handle_Clicked"/>
                <Button Grid.Row="5" Text="Support" Clicked="Support_Handle_Clicked"/>
                <Button Grid.Row="6" Text="Logout" Clicked="Logout_Handle_Clicked"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
