<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PuppyPicker.LoginPage">
    <ContentPage.Content>
        <Grid Padding="30">
            <StackLayout Grid.Row="0" VerticalOptions="CenterAndExpand" >
                <Image Source="dog.png" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Entry Placeholder="User Name" />
                <Entry Placeholder="Password" />
                <Button Text="Sign In" BackgroundColor="Blue" TextColor="White" Padding="10" Clicked="Signin_Handle_Clicked"/>
                <Button Text="Sign Up" BackgroundColor="Blue" TextColor="White" Padding="10" Clicked="Signup_Handle_Clicked"/>
            </StackLayout>  
        </Grid>
    </ContentPage.Content>
</ContentPage>
